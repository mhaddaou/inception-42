server {
    listen 443 http2 ssl;
    listen [::]:443 http2 ssl;
    
    server_name mhaddaou.42.fr www.mhaddaou.42.fr;
    
    ssl_certificate /etc/ssl/certs/mhaddaou.crt;
    ssl_certificate_key /etc/ssl/private/mhaddaou.key;

    ssl_protocols TLSv1.3;

    autoindex on;

    location /
    {
        try_files $uri $uri/ =404;
    }
}
